<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".9"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:context="com.unbeatable.vidhyadaan.TakeMyNoteActivity">

    <include
        android:id="@+id/toolNote"
        layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha=".9"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Date*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_selectDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:padding="5dp"
                        android:text="Select Date"
                        android:textSize="16sp" />-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:padding="5dp"
                        android:text="Select Std*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="15sp" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/sp_std_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:padding="5dp"
                        android:text="Today Note*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="15sp" />


                    <EditText
                        android:id="@+id/et_todayNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="Write Here"
                        android:lines="4"
                        android:maxLines="4"
                        android:paddingLeft="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:padding="5dp"
                        android:text="Next Time Note*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/et_nextNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:hint="Write Here"
                        android:lines="4"
                        android:maxLines="4"
                        android:paddingLeft="8dp" />

                    <Button
                        android:id="@+id/btn_takeMyNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:text="Take Note"
                        android:textColor="#FFFFFF" />

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
